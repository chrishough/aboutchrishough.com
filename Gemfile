gem 'middleman-minify-html'
gem 'middleman-deploy', '~> 2.0.0.pre.alpha'

gem 'slim'
gem 'titleize'
gem 'stringex'

group :development do
  gem 'pry'
  gem 'pry-nav'
  gem 'rubocop'
  gem 'rb-readline'
end
